@require 'mixins'

reportHeight = 600px
reportWidth  = 600px

.report_overlay
  color white
  font-size 20px
  font-weight bold
  font-family helvetica, arial, sans-serif

  .tab
    overlay(x:2px, y:2px)
    overlay()
    vertical()
    radius(0px 0px 6px 6px)
    top reportHeight * 0.5
    right-openable(0px, reportWidth)

  .content
    overlay(x:2px, y:2px)
    right-openable(- reportWidth, reportWidth)
    top 0
    width reportWidth
    height reportHeight
    radius(0px 0px 6px 6px)
