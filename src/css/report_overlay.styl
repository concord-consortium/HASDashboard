@require 'mixins'

reportHeight = 100%
reportWidth  = 50%

.report-tabs
  color white
  font-size 1em
  font-family 'Open Sans', helvetica, arial, sans-serif
  .tabs
    cursor pointer
    font-size 1.25em
    overlay()
    top reportHeight * 0.5
    right-openable(0%, reportWidth)
    display: flex
    flex-direction: row
    align-content: space-around
    vertical()
    .tab
      radius(0px, 0px, 6px, 6px)
      margin-left: 1em

  .content
    border-left solid 5px hsl(210,76,36)
    overlay(x:2px, y:2px)
    right-openable(- reportWidth, reportWidth)
    top 0
    width reportWidth
    height reportHeight
    radius(0px 0px 0 0)
    overflow hidden
