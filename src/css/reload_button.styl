.icon-reload
  font-size 18pt
  width 1em
  height 1em
  background-color hsl(210, 75%, 35%)
  color white
  padding 0.25em
  margin 0.25em
  border-radius 1em
  box-shadow 1px 1px 3px hsla(0,0%,40%,0.5)

  &.loading
    animation loading 1.1s infinite linear
    background-color hsl(210, 25%, 75%)



@keyframes loading
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

