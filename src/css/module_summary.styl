@require 'mixins'

selectable_row(hue=20)
  tr:nth-child(2n)
    background-color hsl(hue,0,93)



.module-summary
  padding: 4px;
  .flex-cell
    width: 130px
    display: flex
    flex-direction: row
    justify-content: space-between


  .heading-container
    background-color aliceblue
    height 100vh
    width 25vw
    position absolute
    padding-top 2em
  .question-head
    width 2em
    height 2em
    padding 1px 0 0 0
    text-align center
  .table-container
    margin-left 25vw
    padding-top 2em
    left 2px
    background-color aliceblue
    overflow auto
    height: 100vh

  table
    color hsl(0,0,25)
    font-size 14px
    text-align right
    overflow: auto
    tr
      &.right
        th
          text-align right
    th
      font-weight 500
      text-align center
      padding 0.5em 1em
      &.team_name
        width 23vw
        position: absolute
        left 2px
        top: auto
        background-color inherit
        margin-right 0px
        padding-right 0px

    td
      font-weight 300
      text-align center
      padding 0.5em 1em
    .answerblock
      border-right: 1px solid black
      // border-left: 1px solid black
      a.headerLink
        display inline-block
        text-decoration: none
        background-color hsl(210, 75%, 35%)
        color white
        padding 0.15em
        border-radius 1em
        box-shadow 1px 1px 3px hsla(0,0%,40%,0.5)
        &:hover
            background-color hsl(219, 50%, 60%)
            cursor pointer


    .marker
      box-sizing border-box
      radius(1em)
      width 2em
      height 2em
      padding 1px 0 0 0
      text-align center

      &.incomplete
        background-color white
        border solid 1px #aaa;

      &.complete
        background-color hsl(0,0,67)
        color hsl(0,0,100)

        &.max_score_6
          &.score_-1 // test score
            background-color hsl(0,0,0)

          &.score_0
            background-color hsl(0,0,0)

          &.score_1
            background-color hsl(354,100, 33)

          &.score_2
            background-color hsl(16, 73, 56)

          &.score_3
            background-color hsl(42, 90, 55)

          &.score_4
            background-color hsl(68, 65, 50)

          &.score_5
            background-color hsl(86, 63, 55)

          &.score_6
            background-color hsl(90, 42, 46)

        &.max_score_4
          &.score_-1 // test score
            background-color hsl(0,0,0)

          &.score_0
            background-color hsl(0,0,0)

          &.score_1
            background-color hsl(354,100, 33)

          &.score_2
            background-color hsl(42, 90, 55)

          &.score_3
            background-color hsl(86, 63, 55)

          &.score_4
            background-color hsl(90, 42, 46)


    .tries
      background hsl(0,0,67)
      color hsl(0,0,100)
      padding 4px 10px 4px 9px
    .tries.none
      background white
      border solid 1px #aaa;
      color #aaa
      padding 3px 13px 3px 12px
