@require 'mixins'

.TOC
  bubbleBox()
  border-right solid 5px #165ca2
  border-bottom solid 5px #165ca2
  h3
    background-color #459ace
    background-image -webkit-linear-gradient(top, rgba(255,255,255,0.28), rgba(0,0,0,0.28))
    background-image linear-gradient(to bottom, rgba(255,255,255,0.28), rgba(0,0,0,0.28))
    -moz-border-radius 2px
    -webkit-border-radius 2px
    border-radius 2px
    color #fff
    font-weight normal
    font-size 1.1em
    margin 0 0 5px 0
    min-height 2.15em
    padding 8px 20px 8px 8px
    span
      display: block;
      margin: -1.4em 0 0 2.4em;
  ul
    font-size 0.9em
    list-style none
    padding-left .5em
    li
      font-weight normal
      list-style none
      display flex
      flex-direction row
      flex-wrap nowrap
      justify-content flex-start
      align-items center
      margin-top 0.1em
      a
        color #459ace
        display block
        text-decoration none
        &:hover
          color hsl(187,45,20)
  .marker
    width 1.5em
    height 2em
    margin-right .1em
    display flex
    align-items center
    align-content center
    justify-content center
    text-align center

  .page-link
    width 270px
    display flex
    .number
      display block
    .name
      display block
      margin-left 0.5em
    &.current
      color hsl(187,45,20)
      font-weight bold
  .question
    color hsl(210, 75%, 36%)
    font-size 14pt
    font-weight bold


  .activity-wrap
    height: 90%;
    overflow: scroll;
    line-height: 33px;
    background-color: #f8f8f8;
    padding: 10px;
    margin: 10px 5px;
    border-width: 0 2px 2px 0;
    border-color: #ccc;
    border-style: solid;
    font-size: 12pt;
    line-height: 1em;
    color: white;

  .activity.hidden > ul
    display none

   .activity:hover
     cursor: pointer
