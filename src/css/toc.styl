@require 'mixins'

.TOC
  bubbleBox()
  border-right solid 5px #165ca2
  border-bottom solid 5px #165ca2
  h3
    background-color #459ace
    background-image -webkit-linear-gradient(top, rgba(255,255,255,0.28), rgba(0,0,0,0.28))
    background-image linear-gradient(to bottom, rgba(255,255,255,0.28), rgba(0,0,0,0.28))
    -moz-border-radius 2px
    -webkit-border-radius 2px
    border-radius 2px
    color #fff
    font-weight normal
    font-size 1.1em
    margin 0 0 5px 0
    min-height 2.15em
    padding 8px 20px 8px 8px
    span
      display: block;
      margin: -1.4em 0 0 2.4em;
  ul
    font-size 0.9em
    list-style none
    padding-left 1.6em
    li
      font-weight normal
      a
        color #459ace
        display: block;
        margin: -1.5em 0 0 2.25em;
        min-height: 2em;
        text-decoration none
        &:hover
          color hsl(187,45,20)

  .students-count
    display inline-block
    position relative
    font-size 1.75em
    width 1.2em
    height 1.16em
    margin-right 0.25em
    text-align center
  .students-count-bg
    display inline-block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-image url(../img/students_count_bg.png)
    background-size 100% 100%
  .students-count-value
    display inline-block
    position absolute
    left -1px
    top 50%
    width 100%
    text-align center
    font-size 0.5em
  li
    .students-count-value
      left 0
      top 45%

  .activity-wrap
    height: 90%;
    overflow: scroll;
    line-height: 33px;
    background-color: #f8f8f8;
    padding: 10px;
    margin: 10px 5px;
    border-width: 0 2px 2px 0;
    border-color: #ccc;
    border-style: solid;
    font-size: 12pt;
    line-height: 1em;
    color: white;

  .activity.hidden > ul
    display none
