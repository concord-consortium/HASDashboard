@require 'mixins'

.TOC
  bubbleBox()
  h3
    margin 0.5em
  ul
    font-size 0.8em
    list-style none
    li
      a
        text-decoration none
        color hsl(187,45,58)
        &:hover
          color hsl(187,45,20)

  .students-count
    display inline-block
    position relative
    font-size 1.3em
    width 1em
    height 1.16em
    margin-right 0.25em
    text-align center
  .students-count-bg
    display inline-block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-image url(../img/students_count_bg.png)
    background-size 100% 100%
  .students-count-value
    display inline-block
    position absolute
    left 0
    top 55%
    width 100%
    text-align center
    font-size 0.5em
    line-height 1em
    color white
