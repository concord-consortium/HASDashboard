@require 'mixins'


navHeight = 400px
navWidth  = 400px

.nav_overlay
  color white
  font-size 20px
  font-weight bold
  font-family helvetica, arial, sans-serif

  .tab
    cursor pointer
    overlay()
    shadow()
    top-openable(0, navHeight)
    left navWidth * 0.7
    radius(0px 0px 6px 6px)

  .content
    overlay()
    shadow()
    top-openable(0 - navHeight, navHeight)
    left 0
    width navWidth
    height navHeight
    radius(0px 0px 6px 6px)
    color hsl(187,45,58)
