
.students-count
  width 2em
  height 2em
  text-align center
  background-size cover
  background-image url(../img/students_count_bg.png)
  position: relative
  cursor: default
  display: flex
  flex-direction: column
  justify-content: flex-end
  align-items: center
  .students-count-value
    position relative
    font-size 1em
    height 1em
    line-height 1em

  .student-names
    left: 40px
    top: 0px
    min-width: 200px
    max-width: 450px
    background-color hsla(43, 85%, 55%, 1.0)
    box-shadow 1px 1px 3px hsla(33, 34%, 0%, 0.25)
    // background-image linear-gradient(to bottom, rgba(255,255,255,0.25), rgba(0,0,0,0.25))
    position absolute
    overflow visible
    padding 0.2em
    border-radius 4px
    cursor: default
    .name
      display: block
      font-size 11pt
      line-height 1.6em
      text-align left
      float none
      color white
      margin 0.2em
      margin-left 1em
      white-space nowrap
    .name.clickable:hover
      cursor pointer
    &:before
      box-sizing border-box
      content ""
      position absolute
      width 0
      height 0
      border-width 8px
      border-style solid
      border-color transparent hsla(43, 85%, 55%, 1.0) transparent transparent
      top 8px
      left -16px
