.students-count-marker
  width 2em
  height 2em
  margin-right .1em
  display flex
  align-items center
  justify-items center
  align-content center
  justify-content center
  text-align center

.students-count
  width 100%
  height 100%
  text-align center
  background-size cover
  background-image url(../img/students_count_bg.png)
  position: relative
  cursor: default
  .students-count-value
    position absolute
    top  1em
    font-size 1em
    left 0px
    width 100%
    height 100%
    &.small
      top  0.9em

  .student-names
    left: 40px
    min-width: 200px
    max-width: 450px
    background-color hsla(43, 85%, 55%, 1.0)
    box-shadow 1px 1px 3px hsla(33, 34%, 0%, 0.25)
    // background-image linear-gradient(to bottom, rgba(255,255,255,0.25), rgba(0,0,0,0.25))
    position absolute
    overflow visible
    padding 0.2em
    border-radius 4px
    cursor: default
    .name
      display: block
      font-size 11pt
      line-height 1.6em
      text-align left
      float none
      color white
      margin 0.2em
      margin-left 1em
      white-space nowrap
    .name.clickable:hover
      cursor pointer
    &:before
      box-sizing border-box
      content ""
      position absolute
      width 0
      height 0
      border-width 8px
      border-style solid
      border-color transparent hsla(43, 85%, 55%, 1.0) transparent transparent
      top 8px
      left -16px
