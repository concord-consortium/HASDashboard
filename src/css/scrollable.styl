.scrollable
  position absolute
  width 100%
  height 100%
  color hsl(0, 0, 25)
  font-size 1em

  .fixed-header
    position fixed
    height 5em
    margin-left 1em
    .return
      font-size .9em
      &:hover
        cursor pointer
        color hsl(187,45,20)
    h2
      font-size 1.7em
      margin 0.4em 0
  .scrollable-content
    overflow-y scroll
    margin-top 5em
    height calc(100% - 5em)
