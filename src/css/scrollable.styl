.scrollable
  position absolute
  width 100%
  height 100%
  color hsl(0, 0, 25)
  font-size 1em

  .fixed-header
    position relative
    padding: 1em
    background-color  hsl(0, 10%, 98%)
    width 100%
    .return
      font-size: 0.9em
      background-color hsl(219, 75%, 35%)
      padding 0.25em
      border-radius 0.25em
      color white
      font-weight bold
      &:hover
        background-color hsl(219, 50%, 60%)
        cursor pointer
    h2
      font-size 1.7em
      margin 0.4em 0
  .scrollable-content
    overflow-y scroll
    height calc(100% - 5em)